---
import { Image } from "astro:assets";
import { products as allProducts } from "../data/products";

const cop = new Intl.NumberFormat("es-CO", {
  style: "currency",
  currency: "COP",
  maximumFractionDigits: 0,
});

const categoryLabel: Record<string, string> = {
  Face: "Rostro",
  Eyes: "Ojos",
  Lips: "Labios",
  Skincare: "Skincare",
};

const products = [
  ...allProducts.filter((p) => p.badge === "New"),
  ...allProducts.filter((p) => p.badge !== "New"),
].slice(0, 3);

const uiCategory = (c: string) => categoryLabel[c] ?? c;

---

<section class="relative min-h-screen bg-zinc-950 py-20 md:py-24 text-zinc-100 selection:bg-pink-500/30 overflow-hidden">
  <div class="pointer-events-none absolute inset-0 opacity-[0.03] mix-blend-overlay"
       style="background-image:url('https://grainy-gradients.vercel.app/noise.svg');"></div>
  <div class="pointer-events-none absolute top-25 left-1/2 -translate-x-1/2 w-50 h-50 bg-pink-600/20 blur-[120px] rounded-full"></div>

  <div class="relative mx-auto w-[min(1500px,calc(100%-2rem))]">
    <div class="mb-14 md:mb-20 flex flex-col items-center text-center">
      <span class="font-mono text-xs uppercase tracking-[0.3em] text-pink-400/90 mb-4">/// Temporada 01</span>
      <h2 class="font-cinzel text-5xl md:text-7xl lg:text-8xl tracking-tighter text-zinc-300 mb-5">
        NOVEDADES 
        <!-- <span class="font-cinzel italic text-zinc-300">INGRESOS</span> -->
      </h2>
      <p class="max-w-xl text-sm md:text-base text-zinc-400 leading-relaxed">
        Lanzamientos exclusivos con pigmentos intensos y siluetas limpias. Toca una tarjeta para ver detalles
      </p>
      <div class="mt-8 h-14 w-px bg-linear-to-b from-pink-500/80 to-transparent"></div>
    </div>

    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3 lg:gap-x-8">
      {products.map((product, idx) => (
        <article class="group relative" style={`--d:${idx * 90}ms`}>
          <div class="rounded-4xl p-px bg-linear-to-b from-white/12 via-white/6 to-transparent
                      transition-transform duration-500 hover:-translate-y-1">
            <div class="rounded-[1.95rem] bg-zinc-950/50 border border-white/10
                        shadow-[0_18px_70px_rgba(0,0,0,0.45)]">

              <a
                href={`/catalog/${product.slug}`}
                class="relative block overflow-hidden rounded-[1.85rem] bg-zinc-900/40 aspect-4/5
                        focus:outline-none focus-visible:ring-2 focus-visible:ring-pink-500/40"
              >
                <div class="absolute left-0 top-0 z-10 w-full p-5 flex items-start justify-between">
                  <span class="font-mono text-[10px] uppercase tracking-[0.22em]
                               rounded-full border border-white/10 bg-black/40 px-3 py-1 text-zinc-200 backdrop-blur">
                    {uiCategory(product.category)}
                  </span>

                  <div class="flex items-center gap-1.5">
                    {product.colors.map((hex) => (
                      <span
                        class="h-2.5 w-2.5 rounded-full border border-white/25"
                        style={`background-color:${hex}`}
                        aria-hidden="true"
                      ></span>
                    ))}
                  </div>
                </div>

                <div class="h-full w-full p-7 md:p-8 flex items-center justify-center
                            transition-transform duration-700 ease-[cubic-bezier(0.25,1,0.5,1)]
                            group-hover:scale-[1.03]">
                  <Image
                    src={product.image}
                    alt={product.name}
                    class="max-h-full w-auto object-contain drop-shadow-2xl"
                    width={600}
                    height={750}
                    loading="lazy"
                  />
                </div>

                <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                     style="background: radial-gradient(circle at 50% 120%, rgba(236,72,153,.18) 0%, rgba(0,0,0,.10) 55%, rgba(0,0,0,.35) 100%);"></div>

                <div class="absolute inset-x-0 bottom-0 p-4">
                  <button
                    type="button"
                    class="w-full rounded-xl bg-white/90 backdrop-blur-md py-3.5 text-sm font-extrabold uppercase tracking-widest text-black
                           shadow-lg transition-colors duration-200
                           hover:bg-pink-500 hover:text-white
                           focus:outline-none focus-visible:ring-2 focus-visible:ring-pink-500/50
                           md:translate-y-2.5 md:opacity-0 md:group-hover:translate-y-0 md:group-hover:opacity-100"
                    aria-label={`Añadir rápido ${product.name}`}
                  >
                    Compra Rápida +
                  </button>
                </div>
              </a>

              <div class="px-6 pb-6 pt-5">
                <div class="flex items-start justify-between gap-4 border-t border-white/10 pt-4 transition-colors group-hover:border-pink-500/35">
                  <div class="min-w-0">
                    <h3 class="font-serif text-2xl text-zinc-100 transition-colors group-hover:text-pink-300">
                      <a href={`/catalog/${product.slug}`} class="outline-none focus-visible:ring-2 focus-visible:ring-pink-500/40 rounded">
                        {product.name}
                      </a>
                    </h3>
                  </div>

                  <span class="shrink-0 font-mono text-lg font-semibold text-zinc-100 transition-colors group-hover:text-pink-200">
                    {cop.format(product.priceCOP)}
                  </span>
                </div>

                <div class="mt-4 flex items-center justify-between">
                  <a
                    href={`/catalog/${product.slug}`}
                    class="text-xs font-mono uppercase tracking-[0.22em] text-zinc-400 hover:text-pink-200 transition-colors"
                  >
                    Ver detalles →
                  </a>

                  <button
                    type="button"
                    class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-[11px]
                           font-bold uppercase tracking-[0.22em] text-zinc-200
                           hover:border-pink-500/30 hover:bg-pink-500/10 hover:text-pink-200 transition"
                    aria-label={`Guardar ${product.name}`}
                  >
                    Guardar
                  </button>
                </div>
              </div>

            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-20 text-center">
      <a href="/catalog" class="relative inline-block group">
        <span class="font-mono text-sm uppercase tracking-[0.2em] text-zinc-400 group-hover:text-white transition-colors">
          Ver Colección Completa
        </span>
        <span class="absolute left-0 -bottom-2 h-px w-full bg-linear-to-r from-pink-500 to-rose-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></span>
      </a>
    </div>
  </div>
</section>
