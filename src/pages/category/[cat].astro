---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { products } from "../../data/products";

const cop = new Intl.NumberFormat("es-CO", {
  style: "currency",
  currency: "COP",
  maximumFractionDigits: 0,
});

const slugify = (s: string) =>
  s
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/&/g, "y")
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");

const CATEGORY_PRESET = [
  { name: "Rostro", key: "face" },
  { name: "Ojos", key: "eyes" },
  { name: "Labios", key: "lips" },
  { name: "Skincare", key: "skincare" },
];

export async function getStaticPaths() {
  return ["face", "eyes", "lips", "skincare"].map((cat) => ({
    params: { cat },
  }));
}

const selectedKey = Astro.params.cat ?? "";
const selectedMeta = CATEGORY_PRESET.find((c) => c.key === selectedKey);

const isValid = Boolean(selectedMeta);

const getCount = (key: string) =>
  products.filter((p) => slugify(p.category ?? "") === key).length;

const categories = [
  { name: "Todos los Artículos", key: "all", count: products.length, active: false },
  ...CATEGORY_PRESET.map((c) => ({
    name: c.name,
    key: c.key,
    count: getCount(c.key),
    active: c.key === selectedKey,
  })),
];

const filtered = isValid
  ? products.filter((p) => slugify(p.category ?? "") === selectedKey)
  : [];

const pageTitle = isValid ? `${selectedMeta!.name} | NANA Beauty` : `Categoría no encontrada | NANA Beauty`;
---

<BaseLayout title={pageTitle}>
  <div class="min-h-screen bg-zinc-950 text-zinc-200 lg:grid lg:grid-cols-[300px_1fr] xl:grid-cols-[350px_1fr]">
    <aside class="relative flex flex-col border-b border-white/10 bg-zinc-950 p-6 lg:sticky lg:top-20 lg:h-[90vh] lg:border-b-0 lg:border-r lg:p-10 z-20">
      <div class="mb-12">
        <h1 class="font-cinzel text-5xl text-white">
          Catálogo
          <span class="block text-lg font-normal not-italic text-pink-500 font-mono tracking-widest mt-2">
            /// {isValid ? selectedMeta!.name.toUpperCase() : "ARCHIVE"}
          </span>
        </h1>
      </div>

      <nav class="flex-1 space-y-1">
        <p class="mb-4 font-mono text-xs text-zinc-500 uppercase tracking-widest">[ Filtrar por ]</p>

        {categories.map((cat) => (
          <a
            href={cat.key === "all" ? "/catalog" : `/category/${cat.key}`}
            class="group flex items-center justify-between py-2 text-sm uppercase tracking-wider transition-all duration-300 hover:pl-2"
          >
            <span class={`${cat.active ? "text-white font-bold" : "text-zinc-400 group-hover:text-white"}`}>
              {cat.active && <span class="text-pink-500 mr-2">►</span>}
              {cat.name}
            </span>

            <span class="font-mono text-xs text-zinc-600 group-hover:text-zinc-400">
              ({cat.count.toString().padStart(2, "0")})
            </span>
          </a>
        ))}
      </nav>

      <div class="mt-12 lg:mt-auto">
        <div class="h-px w-full bg-white/10 mb-6"></div>
        <div class="flex justify-between font-mono text-xs text-zinc-500">
          <span>DIVISA</span>
          <span class="text-zinc-300">COP (COL)</span>
        </div>
      </div>
    </aside>

    <main class="relative bg-zinc-900">
      <div class="grid grid-cols-1 gap-px bg-white/10 sm:grid-cols-2 xl:grid-cols-3">
        {!isValid && (
          <div class="bg-zinc-950 p-12 sm:col-span-2 xl:col-span-3">
            <p class="font-mono text-xs text-zinc-500 uppercase tracking-widest mb-3">404</p>
            <h2 class="font-serif italic text-3xl text-zinc-200">Categoría no encontrada</h2>
            <p class="mt-3 text-sm text-zinc-400">Vuelve al catálogo o elige una categoría válida.</p>
            <a
              href="/catalog"
              class="inline-flex mt-6 border border-white/20 px-6 py-3 text-sm uppercase tracking-widest hover:bg-white hover:text-black transition-colors"
            >
              Ir al catálogo
            </a>
          </div>
        )}

        {isValid && filtered.map((product) => (
          <a href={`/catalog/${product.slug}`} class="group relative block bg-zinc-950 overflow-hidden h-full">
            <div class="relative aspect-3/4 w-full max-h-80 overflow-hidden bg-zinc-900/50">
              <div class="flex h-full w-full items-center justify-center p-10 transition-transform duration-700 ease-in-out group-hover:scale-105">
                <Image
                  src={product.image}
                  alt={product.name}
                  width={600}
                  height={800}
                  class="max-h-full w-auto object-contain drop-shadow-2xl"
                />
              </div>

              <div class="pointer-events-none absolute inset-0 bg-pink-500/0 transition-colors duration-300 group-hover:bg-pink-500/5 mix-blend-overlay"></div>

              {product.badge && (
                <div class="absolute top-0 left-0 p-4">
                  <span class="bg-white text-black text-[10px] font-bold px-2 py-1 uppercase tracking-widest">
                    {product.badge}
                  </span>
                </div>
              )}
            </div>

            <div class="relative border-t border-white/5 p-6 transition-colors duration-300 group-hover:bg-zinc-900">
              <div class="flex items-start justify-between gap-4">
                <div>
                  <h3 class="font-serif text-xl italic text-zinc-100 group-hover:text-pink-400 transition-colors">
                    {product.name}
                  </h3>
                  <p class="mt-1 text-xs font-mono text-zinc-500 uppercase tracking-wider">
                    {product.category || "Maquillaje"}
                  </p>
                </div>

                <div class="text-right">
                  <p class="font-mono text-sm font-medium text-white">
                    {cop.format(product.priceCOP)}
                  </p>
                </div>
              </div>

              {product.colors && (
                <div class="mt-4 flex gap-2">
                  {product.colors.map((hex) => (
                    <span class="h-2 w-2 rounded-full border border-white/20" style={`background-color: ${hex}`}></span>
                  ))}
                </div>
              )}

              <div class="absolute right-6 bottom-6 translate-y-4 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100">
                <span class="text-xs font-bold uppercase tracking-widest text-zinc-400 border-b border-zinc-400 pb-0.5 hover:text-white hover:border-white">
                  Vista Rápida
                </span>
              </div>
            </div>
          </a>
        ))}

        {isValid && filtered.length === 0 && (
          <div class="bg-zinc-950 p-12 sm:col-span-2 xl:col-span-3">
            <p class="font-mono text-xs text-zinc-500 uppercase tracking-widest mb-3">SIN RESULTADOS</p>
            <h2 class="font-serif italic text-3xl text-zinc-200">No hay productos aquí todavía.</h2>
            <p class="mt-3 text-sm text-zinc-400">Prueba otra categoría del archivo.</p>
          </div>
        )}

        <div class="hidden xl:flex bg-zinc-950 p-12 items-center justify-center opacity-30">
          <span class="font-serif italic text-4xl text-zinc-800">Próximamente</span>
        </div>
      </div>

      <div class="bg-zinc-950 border-t border-white/10 p-12 text-center">
        <p class="font-mono text-xs text-zinc-500 mb-4">FIN DE LA LISTA</p>
        <button class="border border-white/20 px-8 py-3 text-sm uppercase tracking-widest hover:bg-white hover:text-black transition-colors">
          Cargar Más
        </button>
      </div>
    </main>
  </div>
</BaseLayout>
